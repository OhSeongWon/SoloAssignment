<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerveiw_item"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape"
        android:clipToOutline="true"
        android:src="@drawable/sample1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"/>

    <!--        clipToOutline="true"  -> 바깥선을 없애서 background설정을 적용시킬 수 있음-->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="산지 한달된 선풍기 팝니다.ddddddddddddddd"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="서울 서대문구 창천동"
        android:textColor="#565656"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="1,000원"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />


    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_chat_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="25"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_2"
        app:layout_constraintStart_toEndOf="@id/iv_2"
        app:layout_constraintTop_toTopOf="@id/iv_2" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_num"
        app:layout_constraintStart_toEndOf="@+id/tv_chat_num"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_num" />

    <TextView
        android:id="@+id/tv_heart_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="13"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_3"
        app:layout_constraintStart_toEndOf="@+id/iv_3"
        app:layout_constraintTop_toTopOf="@+id/iv_3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CFCFCF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

